/* funfirst.pro */test(X,Y,R) :-	eval(funcall(plus,[constr(X,[]),			   constr(Y,[])]), R).:- mode eval(i,o).eval(constr(C,Args),constr(C,EArgs)) :-	l_eval(Args,EArgs).eval(funcall(F,Args),Res) :-	l_eval(Args,EArgs),	equation(F,EArgs,Rhs),	eval(Rhs,Res).:- mode l_eval(i,o).l_eval([],[]).l_eval([H|T],[EH|ET]) :-	eval(H,EH),	l_eval(T,ET).:- mode equation(i,i,o).equation(plus,[constr(0,[]),X],X).equation(plus,[constr(s,[X]),Y],	funcall(plus,[X,Y])).